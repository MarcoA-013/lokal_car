<%= form_with(model: brand) do |form| %>
  <% if brand.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(brand.errors.count, "error") %> Não foi possível salvar:</h2>

      <ul>
        <% brand.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label 'Fabricante/Marca:', style: "display: block" %>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= submit_tag 'Cadastrar' %>
  </div>
<% end %>
