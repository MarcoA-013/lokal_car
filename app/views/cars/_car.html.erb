<div id="<%= dom_id car %>">
  <p>
    <strong>Nome:</strong>
    <%= car.name %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= car.year %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= car.color %>
  </p>

  <p>
    <strong>Km:</strong>
    <%= car.km %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= car.status %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= car.brand.brand %>
  </p>

  <p>
    <strong>Model:</strong>
    <%= car.model.model %>
  </p>

  <p>
    <strong>Url image:</strong>
    <%= car.url_image %>
  </p>

  <p>
    <%= image_tag car.image, width: 300 if car.image.attached? %>
  </p>

</div>
