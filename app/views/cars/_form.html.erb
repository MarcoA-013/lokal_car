<%= form_with(model: car, html: { multipart: true }) do |form| %>
  <% if car.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(car.errors.count, "error") %> para salvar o veículo:</h2>

      <ul>
        <% car.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<article>

  <div>
    <%= form.label 'Descrição' , style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label 'Ano/Modelo', style: "display: block" %>
    <%= form.number_field :year %>
  </div>

  <div>
    <%= form.label 'Cor', style: "display: block" %>
    <%= form.text_field :color %>
  </div>

  <div>
    <%= form.label 'Kilometragem', style: "display: block" %>
    <%= form.number_field :km %>
  </div>

  <div>
    <%= form.label 'Marca ' %>
    <%= form.collection_select :brand_id, Brand.all, :id, :brand %>  
  </div>
  
  <div>
    <%= form.label 'Modelo ' %>
    <%= form.collection_select :model_id, Model.all, :id, :model %>  
  </div>

  <div>
    <%= form.label 'Imagem' %>
    <%= form.file_field :image %>
  </div>
  
  <div>
    <%= submit_tag 'Enviar cadastro' %>
  </div>
</article>
<% end %>